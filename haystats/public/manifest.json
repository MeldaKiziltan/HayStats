{
  "manifest_version": 2,

  "name": "Haystats",
  "description": "To find your needle in a haystack",
  "version": "0.0.2",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },

  "icons": {
    "16": "logo-small.png",
    "48": "logo-small.png",
    "256": "logo-small.png"
  },

  "background": {
    "scripts": ["watsonIntegration.js"]
  },

  "content_scripts": [{
    "matches": [
        "https://*/",
        "http://*/*"

    ],
    "all_frames": true,
    "js": ["watsonIntegration.js"]
  }],

  "content_security_policy": "script-src 'self' 'sha256-vmLdg5RKpgO3eTVyueY2COr9JDt0zoS+Zbz7dAio20U='; object-src 'self'",  
  
  "web_accessible_resources": [
    "watsonIntegration.js"
  ],

  "permissions": [
    "tabs",
    "activeTab",
    "declarativeContent", 
    "storage",
    "http://*/*",
    "https://*/*",
    "contextMenus"
  ]
}