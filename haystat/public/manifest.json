{
  "manifest_version": 2,

  "name": "Haystat",
  "description": "Find your stats like a needle in a haystack!",
  "version": "0.0.1",
  "permissions": ["tabs", "activeTab", "declarativeContent", "storage"],

  "page_action": {
    "default_popup": "index.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "icons": {
    "16": "logo-small.png",
    "48": "logo-small.png",
    "128": "logo-small.png",
    "192": "logo192.png"
  },

  "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "css": ["index.css"],
        "js": ["index.js"]
    }]
}